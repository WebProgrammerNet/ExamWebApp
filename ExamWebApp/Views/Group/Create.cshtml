@model NewGroupViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-6">
                        <form method="post" enctype="multipart/form-data" data-file-dragndrop>
                            <div class="form-group">
                                <label asp-for="GroupName">GroupName</label>
                                <input asp-for="GroupName" type="text" class="form-control" />
                                <span asp-validation-for="GroupName" class="text-danger"></span>
                            </div>

                            <div class="form-group" style="width:200px">
                                <label asp-for="SchoolClass">Please Select SchoolClass</label>
                                <select asp-for="SchoolClassId" class="form-control" asp-items="@(new SelectList(ViewBag.Class, "SchoolClassId", "Nth"))"></select>
                                <span asp-validation-for="SchoolClass" class="text-danger"></span>
                            </div>

                            <div class="form-group" style="width:200px">
                                <label asp-for="Teacher">Please Select Teacher</label>
                                <select asp-for="TeacherId" class="form-control" asp-items="@(new SelectList(ViewBag.Teacher, "TeacherId", "Name"))"></select>
                                <span asp-validation-for="Teacher" class="text-danger"></span>
                            </div>

                            <input type="submit" class="btn btn-primary" value="Create" />
                        </form>
                    </div>

                    <div class="col-md-6">

                        @*<img src="~/img/Createproduct/Capture.PNG" style="width:100%" />*@
                    </div>

                </div>
            </div>
        </div>
    </div>

