@model ChangePassword

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAccaunt.cshtml";
}
    <section id="login">
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset=md-1">
                    <div class="row">
                        <div class="col-md-5 login-left">
                            <img src="~/images/register_icon/down1.png" alt="">
                            <h3>Join Us</h3>
                            <p>
                                Create your account
                                for use this Application.
                            </p>
                            <a asp-controller="Accaunt" asp-action="Login"> <button type="button" class="btn btn-primary"> Login </button></a>
                        </div>

                        <div class="col-md-7 login-right">
                            <h2>Password</h2>
                            <form method="post" style="margin-top:20px">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    @*<label asp-for="Email"></label>*@
                                    <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="off" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    @*<label asp-for="Password"></label>*@
                                    <input asp-for="OldPassword" class="form-control" placeholder="Current Password" autocomplete="off" />
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    @*<label asp-for="ConfirmPassword"></label>*@
                                    <input asp-for="NewPassword" class="form-control" placeholder="New Password" autocomplete="off" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    @*<label asp-for="ConfirmPassword"></label>*@
                                    <input asp-for="RetypePassword" class="form-control" placeholder="Confirm New Password" autocomplete="off" />
                                    <span asp-validation-for="RetypePassword" class="text-danger"></span>
                                </div>
                                <input type="submit" class="btn btn-success" value="Confirm" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

