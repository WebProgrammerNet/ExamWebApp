@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccaunt.cshtml";
}
<section id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset=md-1">
                <div class="row">
                    <div class="col-md-5 login-left">
                        <img src="~/images/register_icon/down1.png" alt="">
                        <h3>Join Us</h3>
                        <p>
                            Create your account
                            for use this Application.
                        </p>
                        <a asp-controller="Accaunt" asp-action="Register"> <button type="button" class="btn btn-primary">  Register </button></a>
                        <a asp-controller="Examine" asp-action="Index"> <button type="button" class="btn btn-primary">  Examine </button></a>
                        <a asp-controller="Accaunt" asp-action="Logout"> <button type="button" class="btn btn-primary">  Logout </button></a>
                        
                    </div>

                    <div class="col-md-7 login-right">
                        <h2>Login In</h2>
                        <form method="post" style="margin-top:20px">
                            <div class="form-group">
                                @*<label asp-for="Email"></label>*@
                                <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="off" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @*<label asp-for="Password"></label>*@
                                <input asp-for="Password" class="form-control" placeholder="password" autocomplete="off" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RememberMe">Remember Me</label>
                                <input asp-for="RememberMe" />
                            </div>
                            <input type="submit" class="btn btn-success" value="Send Message" />
                            <div class="hold" style="margin-top:15px">
                                <a asp-action="ForgetPassword" style="color:#ff8908; font-weight:500">Forget Password?</a>
                                <br />
                                <a asp-action="ChangePassword" style="color:#ff8908; font-weight:500">Change Password?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


