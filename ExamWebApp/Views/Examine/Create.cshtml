@model NewExamViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-6">
                        <form method="post" enctype="multipart/form-data" data-file-dragndrop>
                            <div class="form-group">
                                <label asp-for="ExamDay">ExamDay</label>
                                <input asp-for="ExamDay" type="date" class="form-control" />
                                <span asp-validation-for="ExamDay" class="text-danger"></span>
                            </div>

                            <div class="form-group" style="width:200px">
                                <label asp-for="Subject">Please Select Subject</label>
                                <select asp-for="SubjectId" class="form-control" asp-items="@(new SelectList(ViewBag.Subject, "SubjectId", "Name"))"></select>
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                         
                            <input type="submit" class="btn btn-primary" value="Create" />
                        </form>
                    </div>

                    <div class="col-md-6">

                        @*<img src="~/img/Createproduct/Capture.PNG" style="width:100%" />*@
                    </div>

                </div>
            </div>
        </div>
    </div>

