@model  IEnumerable<ExofSt>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Teacher_Name</th>
                                <th scope="col">Teacher_Surname</th>
                                <th scope="col">Student_Name</th>
                                <th scope="col">Student_Surname</th>
                                <th scope="col">St_Mark</th>
                                <th scope="col">St_Code</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 1;
                            }
                            @foreach (var item in Model)
                            {
                            <tr>

                                <th scope="row">@count</th>

                                <td>@item.Teacher.Name</td>
                                <td>@item.Teacher.Surname</td>
                                <td>@item.Student.Name</td>
                                <td>@item.Student.Surname</td>
                                <td>@item.Student.Mark</td>
                                <td>@item.Student.Number</td>
                            </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

